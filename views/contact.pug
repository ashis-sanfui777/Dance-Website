extends base.pug
block scripts 
    script(src="/static/index.js") 
block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css
block content
    div#contact-container 
        h1 Contact Us 
        form(action="/contact", method="post",class="myform") 
            input(type="text",class='myinput',name="Name",placeholder="Name" required)
            input(type="tel",class='myinput',name="Phone",placeholder="Phone" required)
            input(type="email",class='myinput',name="Email",placeholder="Email")
            input(type="text",class='myinput',name="address",placeholder="Address")
            input(type="text",class='myinput',name="desc",placeholder="Your Consern")
            button(class='btn')
                |Submit